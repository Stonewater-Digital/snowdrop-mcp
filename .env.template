# Snowdrop MCP — Environment Variables Template
# Copy to .env and fill in values. Never commit .env to git.

# Google Cloud (for Ghost Ledger / Sheets skills)
GCP_SERVICE_ACCOUNT_FILE=path/to/snowdrop-gcp-key.json
GOOGLE_PROJECT_ID=your-gcp-project-id

# Kraken (read-only — no withdraw permissions)
KRAKEN_API_KEY=
KRAKEN_SECRET=

# OpenRouter (LLM access)
OPENROUTER_API_KEY=

# Telegram (for alert skills)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Ghost Ledger
GHOST_LEDGER_URL=
GHOST_LEDGER_ID=

# Moltbook engagement
MOLTBOOK_API_TOKEN=
MOLTBOOK_BASE_URL=https://www.moltbook.com
GOOGLE_SERVICE_ACCOUNT_JSON=path/to/snowdrop-gcp-key.json
ENGAGEMENT_MODEL=google/gemini-2.0-flash-lite-001

# Slack (for daily engagement reports)
SLACK_BOT_TOKEN=
SLACK_CHANNEL_ID=

# Context7 MCP (free API key at https://context7.com/dashboard)
CONTEXT7_API_KEY=

# Google Developer Knowledge MCP (GCP Console → APIs & Services → Credentials)
# Enable "Developer Knowledge API" and restrict this key to that API
GOOGLE_KNOWLEDGE_API_KEY=
